<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="StickyPrompts.Dialogs.PromptEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="ThisDialog"
    Title="Add Prompt"
    PrimaryButtonText="Save"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    IsPrimaryButtonEnabled="{x:Bind IsValid, Mode=OneWay}">

    <StackPanel Spacing="16" MinWidth="350">
        <!-- Title Input -->
        <TextBox
            x:Name="TitleInput"
            Header="Title"
            PlaceholderText="e.g., Code Review"
            Text="{x:Bind ViewModel.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            MaxLength="100" />

        <!-- Content Input -->
        <TextBox
            x:Name="ContentInput"
            Header="Prompt Content"
            PlaceholderText="Enter the prompt text that will be copied when dragged..."
            Text="{x:Bind ViewModel.Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            Height="150"
            ScrollViewer.VerticalScrollBarVisibility="Auto" />

        <!-- Color Picker -->
        <StackPanel Spacing="8">
            <TextBlock Text="Color" Style="{StaticResource BodyTextBlockStyle}" />
            
            <GridView
                x:Name="ColorPicker"
                ItemsSource="{x:Bind ViewModel.AvailableColors}"
                SelectedItem="{x:Bind ViewModel.SelectedColor, Mode=TwoWay}"
                SelectionMode="Single"
                IsItemClickEnabled="True"
                ItemClick="ColorPicker_ItemClick">
                
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5" />
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border 
                            Width="32" 
                            Height="32" 
                            CornerRadius="4"
                            BorderThickness="2"
                            BorderBrush="Transparent"
                            Margin="2">
                            <Border.Background>
                                <SolidColorBrush Color="{x:Bind}" />
                            </Border.Background>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>

                <GridView.ItemContainerStyle>
                    <Style TargetType="GridViewItem">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Margin" Value="2" />
                    </Style>
                </GridView.ItemContainerStyle>
            </GridView>
        </StackPanel>

        <!-- Preview -->
        <StackPanel Spacing="4">
            <TextBlock Text="Preview" Style="{StaticResource BodyTextBlockStyle}" />
            
            <Border 
                x:Name="PreviewBorder"
                CornerRadius="8" 
                Padding="12"
                MinHeight="60">
                
                <StackPanel>
                    <TextBlock 
                        Text="{x:Bind ViewModel.Title, Mode=OneWay}"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Foreground="White"
                        TextTrimming="CharacterEllipsis" />
                    
                    <TextBlock 
                        Text="{x:Bind ViewModel.Content, Mode=OneWay}"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Foreground="#CCFFFFFF"
                        TextTrimming="CharacterEllipsis"
                        MaxLines="2" />
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>
</ContentDialog>
